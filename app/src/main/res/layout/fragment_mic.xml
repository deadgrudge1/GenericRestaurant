<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/converse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mic_float_button"
        android:layout_marginTop="50dp"
        android:imeActionId="4"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mic_float_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/mic_float_button2"
        app:backgroundTint="@color/backgroundYellow"
        app:srcCompat="@drawable/microphone" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mic_float_button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        app:backgroundTint="@color/backgroundYellow"
        app:srcCompat="@drawable/microphone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mute_float_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@id/mic_float_button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:backgroundTint="@color/backgroundYellow"
        app:srcCompat="@drawable/ic_volume_on_black_24dp" />

</RelativeLayout>