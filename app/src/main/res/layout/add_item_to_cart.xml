<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_text"
    android:layout_width="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <view class="android.support.v7.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </view>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Walla habibi"
                android:textStyle="bold"
                android:textSize="25dp"
                />


            <TextView
                android:id="@+id/foodtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodname"
                android:text="Non veg"
                android:textSize="16dp"


                />
        </LinearLayout>

        <ImageView
            android:id="@+id/food_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/vegetarian_food_symbol" />


    </LinearLayout>

    <TextView
        android:id="@+id/edit_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty : 1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"/>

    <TextView
        android:id="@+id/foodcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="23dp"
        android:text="Rs.249"
        android:textSize="17dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="132dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addqty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="-" />

        <TextView

            android:id="@+id/clicker_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/subqty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

    </LinearLayout>

</RelativeLayout>