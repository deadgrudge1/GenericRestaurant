<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/menu_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/card_view_shape"
    android:outlineSpotShadowColor="@color/backgroundBlack"
    android:backgroundTint="@color/backgroundBlack"
    android:elevation="3dp"
    android:padding="45dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_shape"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/food_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@drawable/vegetarian_food_symbol" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foodname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Walla habibi"
                    android:textColor="@color/secondaryColor"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/foodtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/foodname"
                    android:text="Non veg"
                    android:textColor="@color/secondaryColor"


                    android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/edit_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/foodcost"
            android:layout_below="@+id/foodcost"
            android:text="Qty : 1"
            android:textColor="@color/secondaryColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/foodcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="Rs.249"
            android:textColor="@color/secondaryColor"
            android:textSize="17dp"
            android:textStyle="bold" />


    </RelativeLayout>
</android.support.v7.widget.CardView>