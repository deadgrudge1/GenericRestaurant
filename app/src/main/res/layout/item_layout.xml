<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_text"
    android:layout_width="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <view
        class="android.support.v7.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/btn_dialog">

    </view>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/food_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/vegetarian_food_symbol" />

        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Walla habibi"
                android:textStyle="bold"
                android:textSize="25dp"
                />


            <TextView
                android:id="@+id/foodtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodname"
                android:text="Non veg"
                android:textSize="16dp"


                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/edit_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/foodcost"
        android:layout_below="@+id/foodcost"
        android:text="Qty : 1"
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
         />

    <TextView
        android:id="@+id/foodcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/cancelButton"
        android:text="Rs.249"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <ImageButton
        android:id="@+id/cancelButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@android:string/cancel"
        app:srcCompat="@drawable/cross"
        android:scaleType="fitCenter"
        android:background="#20dddddd"
        android:layout_marginStart="20dp"
        android:padding="7dp"
        android:layout_marginTop="10dp"

        />


</RelativeLayout>